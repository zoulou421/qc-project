<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="qcproject_tag_view_tree" model="ir.ui.view">
        <field name="name">qcproject.tag.tree</field>
        <field name="model">qcproject.tag</field>
        <field name="arch" type="xml">
            <tree class="qcproject-tag-tree">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="qcproject_tag_view_form" model="ir.ui.view">
        <field name="name">qcproject.tag.form</field>
        <field name="model">qcproject.tag</field>
        <field name="arch" type="xml">
            <form class="qcproject-tag-form">
                <sheet>
                    <group>
                        <field name="name" class="animated pulse" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>